# Development Environment - Backend Configuration

# Application Settings
APP_ENV=development
APP_NAME=AUL Quote App
APP_VERSION=1.0.0
DEBUG=true
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=DEBUG

# Security Settings (Development Only - DO NOT USE IN PRODUCTION)
SECRET_KEY=dev-secret-key-replace-in-production
API_KEYS=dev-secret-key-replace-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=60  # Longer expiry for development
REFRESH_TOKEN_EXPIRE_DAYS=30   # Longer expiry for development

# Database Settings
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=warehouse_quotes_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DB_POOL_SIZE=5

# Redis Settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# CORS Settings
BACKEND_CORS_ORIGINS=["http://localhost:5173", "http://localhost:8000", "http://localhost:3000"]

# File Upload Settings
UPLOAD_DIR=uploads/development
MAX_UPLOAD_SIZE=20971520  # 20MB for development

# Monitoring Settings
PROMETHEUS_METRICS=True
ENABLE_METRICS=true
METRICS_PORT=9090
LOGGING_LEVEL=DEBUG

# Rate Limiting Settings
RATE_LIMIT_PER_MINUTE=120  # Higher limit for development

# AI/LLM Settings
AI_MODEL=gpt-4
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=4000  # Higher token limit for development
AI_TIMEOUT=120      # Longer timeout for development

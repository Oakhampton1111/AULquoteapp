# Shared Database Configuration

# Connection Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800

# Migration Settings
ALEMBIC_SCRIPT_LOCATION=alembic
ALEMBIC_VERSION_LOCATIONS=alembic/versions
ALEMBIC_CONFIG=alembic.ini

# Backup Configuration
DB_BACKUP_RETENTION_DAYS=7
DB_BACKUP_TIME=00:00
DB_BACKUP_COMPRESS=true
DB_BACKUP_DIR=backups

# Database Monitoring
DB_METRICS_ENABLED=true
DB_SLOW_QUERY_THRESHOLD_MS=1000
DB_LOG_LEVEL=INFO
DB_STATEMENT_TIMEOUT=30000  # 30 seconds
DB_LOCK_TIMEOUT=10000      # 10 seconds

# Connection Timeouts
DB_CONNECT_TIMEOUT=10      # 10 seconds
DB_COMMAND_TIMEOUT=30      # 30 seconds

# Query Settings
DB_DEFAULT_SCHEMA=public
DB_SEARCH_PATH=public,audit
DB_TIMEZONE=UTC

# Performance Settings
DB_PREPARED_STATEMENTS=true
DB_STATEMENT_CACHE_SIZE=100
DB_MIN_MESSAGES=warning    # Reduce log noise in production

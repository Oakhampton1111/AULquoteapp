# Shared AI/LLM Configuration

# Model Configuration
LLM_MODEL_NAME=gpt-4
LLM_TEMPERATURE=0.1
LLM_MAX_LENGTH=2048
LLM_TOP_P=0.9
LLM_TOP_K=50
LLM_FREQUENCY_PENALTY=0.0
LLM_PRESENCE_PENALTY=0.0

# RAG Configuration
RAG_INDEX_NAME=aul-quote-knowledge
RAG_CHUNK_SIZE=512
RAG_CHUNK_OVERLAP=50
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
RAG_MAX_DOCUMENTS=5
RAG_SCORE_THRESHOLD=0.7

# AI Features
ENABLE_RATE_OPTIMIZATION=true
ENABLE_QUOTE_SUGGESTIONS=true
ENABLE_MARKET_ANALYSIS=true
ENABLE_CUSTOMER_INSIGHTS=true
ENABLE_FRAUD_DETECTION=true

# Performance Settings
AI_REQUEST_TIMEOUT=30
AI_MAX_RETRIES=3
AI_BATCH_SIZE=16
AI_CACHE_TTL=3600
AI_RATE_LIMIT=100
AI_CONCURRENT_REQUESTS=5

# Monitoring
AI_METRICS_ENABLED=true
AI_LOG_LEVEL=INFO
AI_TRACE_ENABLED=true
AI_PERFORMANCE_LOGGING=true

# Cache Settings
AI_CACHE_TYPE=redis
AI_CACHE_PREFIX=ai
AI_CACHE_COMPRESS=true

# Security Settings
AI_REQUEST_VALIDATION=true
AI_MAX_INPUT_LENGTH=4096
AI_CONTENT_FILTER=true
AI_SENSITIVE_DATA_FILTER=true

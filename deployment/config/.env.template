# Application
APP_ENV=development  # development, staging, production
APP_NAME=AUL Quote App
APP_VERSION=1.0.0
DEBUG=True
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/aul_quote_app
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/aul_quote_app_test

# Authentication
SECRET_KEY=your-secret-key-here
API_KEYS=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# AI/LLM Configuration
LLM_MODEL_NAME=flan-t5-base
LLM_TEMPERATURE=0.1
RAG_INDEX_NAME=aul-quote-knowledge
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Frontend
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000/ws
VITE_APP_NAME="AUL Quote App"

# Monitoring
PROMETHEUS_METRICS=True
LOGGING_LEVEL=INFO

# Email
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=noreply@aulogistics.com

# Redis (for caching and session management)
REDIS_URL=redis://localhost:6379/0

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Testing
TEST_USER_EMAIL=test@aulogistics.com
TEST_USER_PASSWORD=test-password-123
TEST_ADMIN_EMAIL=admin@aulogistics.com
TEST_ADMIN_PASSWORD=admin-password-123
